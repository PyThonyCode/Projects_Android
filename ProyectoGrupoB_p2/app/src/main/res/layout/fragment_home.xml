                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/cardview_dark_background">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INICIO: 12/07/2023"
                        android:textStyle="bold">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TERMINO: 02/08/2023"
                        android:textStyle="bold">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORGANIZADOR: VICERRECTORADO ACADÉMICO"
                        android:textStyle="bold">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRIMER CONGRESO INTERNAION DE INGENIERIA

#UNSTeCapacita | La Universidad Nacional del Santa (UNS) anuncia la realización del I Congreso Internacional de Ingeniería, Sociedad y Desarrollo Sostenible. ¡Inscripciones abiertas!" >
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Más información en los siguientes links:">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formato para PRESENTACIÓN DE PROPUESTAS: https://www.uns.edu.pe/.../informacion_congreso...">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enlace de RESUMEN DE PONENCIA: https://forms.gle/wwwdE62qK4ruv7Ko6">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enlace de PRESENTACIÓN PARA EXPOSICIÓN: https://forms.gle/vA9am3X5vihbGgb59">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enlace de PRESENTACIÓN PARA EXPOSICIÓN: https://forms.gle/vA9am3X5vihbGgb59">
